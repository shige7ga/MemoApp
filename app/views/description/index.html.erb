<div class="main">
  <div class="container">
    <h1>メモ一覧</h1>
    <% @descriptions.each do |description| %>
      <div class="content-framework">
        <div class="content-title">
          <%= link_to description.memoTitle, "/description/#{description.id}/details" %>
        </div>
        <div class="content">
          <p><%= description.content %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>