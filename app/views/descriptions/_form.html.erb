<div class="form">
  <% description.errors.full_messages.each do |message| %>
    <div class="error-message">
      <%= message %>
    </div>
  <% end %>
  <%= form_for(description) do |f| %>
    <%= f.label :memoTitle, "タイトル：" %>
    <%= f.text_field :memoTitle, class: "input-text-field"%><br>
    <%= f.label :importance, "重要度：" %>
    <% @importanceValues.each do |importanceValue| %>
      <% if importanceValue == description.importance %>
        <%= f.radio_button :importance, importanceValue, :checked=>'checked' %><%= importanceValue %>
      <% else %>
        <%= f.radio_button :importance, importanceValue %><%= importanceValue %>
      <% end %>
    <% end %>
    <%= f.text_area :content %>
    <%= f.submit %>
  <% end %>
</div>